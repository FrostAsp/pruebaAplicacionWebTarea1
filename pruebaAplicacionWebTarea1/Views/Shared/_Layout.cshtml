<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aplicacion Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/pruebaAplicacionWebTarea1.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TurismoCR</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i> Inicio</a>
                        </li>
                        <br />
                        @if (User.IsInRole("True"))
                        {

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"> <i class="fa-regular fa-folder-open"></i> Registros Internos</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="" asp-controller="Producto" asp-action="Index">Producto <i class="fa-solid fa-truck-ramp-box"></i></a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Proveedores" asp-action="Index">Proveedores <i class="fa-solid fa-car"></i></a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Tours" asp-action="Index">Tours <i class="fa-sharp fa-solid fa-plane-departure"></i> </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="Salir">Cerrar Sesion <i class="fa-solid fa-right-to-bracket"></i></a>
                                </div>
                            </li>
                        }
                        @if (!User.IsInRole("True"))
                        {

                            <li class="nav-item">
                                <a class="nav-link text-dark text-white" asp-area="" asp-controller="Cliente" asp-action="Index">Cliente <i class="fa-regular fa-id-card"></i></a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-dark text-white" asp-area="" asp-controller="Facturacion" asp-action="Index">Facturacion <i class="fa-sharp fa-solid fa-paper-plane"></i> </a>
                        </li>

                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="Salir">
                                    Cerrar Sesion <i class="fa-solid fa-right-to-bracket"></i>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Registro" asp-action="NuevoRegistro">
                                    Registrar <i class="fa-sharp fa-solid fa-user-plus"></i>
                                </a>
                            </li>

                            <li class="nav-item text-end">
                                <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="Validar">
                                    Login <i class="fa-solid fa-circle-user"></i>
                                </a>
                            </li>

                        </ul>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

@*    <footer class="border-top footer text-muted bg-primary text-white-50">
        <div class="container">
            &copy; 2020 - SistemaInventario
        </div>
    </footer>*@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://kit.fontawesome.com/0fe3b249ad.js" crossorigin="anonymous"></script>
    @*<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>*@
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

