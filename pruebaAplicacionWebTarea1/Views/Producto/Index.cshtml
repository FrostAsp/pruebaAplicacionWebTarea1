@model IEnumerable<Clases_CRUD.CRUD_Modelos.Producto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3 p-5 my-5 bg-light text-white">
  
    <div class="row pt-4">

        <div class="col-6">

            <h2 class="text-primary">Lista de Productos</h2>

        </div>

        <div class="col-6 text-end">
            <a asp-controller="Producto" asp-action="Crear" class="btn btn-primary">
                <i class="fa-regular fa-plus"></i> Nuevo Producto
            </a>
        </div>

        <form asp-controller="Producto" asp-action="Index">
            <br />
            <p>
                Buscar: <input type="text" name="buscar" class="form-text" />
                <input type="submit" value="Buscar" class="btn btn-sm btn-dark" />
            </p>

        </form>

    </div>
    <br />

    @if(Model.Count()>0){

        <table class="table table-striped border-1" style="width:100%">

            <thead class="bg-primary text-white">

                <tr>

                    <th>
                        Id
                    </th>
                    <th>
                        Descripcion
                    </th>
                    <th>
                        Año en que se agrego el inventario
                    </th>
                    <th>
                        Precio de compra
                    </th>
                    <th>
                        Precio de venta
                    </th>
                    <th>
                        Utilidad
                    </th>
                    <th>
                        Id Provedor
                    </th>
                    <th>
                        
                    </th>
                </tr>
            </thead>

            <thbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th width="5%">@item.Id</th>
                        <th width="15%">@item.Descripcion</th>
                        <th width="15%">@item.Año</th>
                        <th width="12%">@item.precio</th>
                        <th width="12%">@item.precioVenta</th>
                        <th width="5%">@item.Utilidad</th>
                        <th width="11%">@item.idprovedor</th>
                        
                        <th class="text-center">

                            <div class="w-75 btn-group" role="group">

                                <a asp-controller="Producto" asp-action="Editar" asp-route-Id="@item.Id" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Producto" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>

                            </div>

                        </th>
                    </tr>
                }
            </thbody>

        </table>
    }
    else
    {
        <p>No hay Registro de Productos</p>
    }

</div>
