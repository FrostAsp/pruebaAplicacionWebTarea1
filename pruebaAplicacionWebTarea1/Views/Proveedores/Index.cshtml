@model IEnumerable<Clases_CRUD.CRUD_Modelos.Provedor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3 p-5 my-5 bg-light text-white">

    <div class="row pt-4">

        <div class="col-6">

            <h2 class="text-primary">Lista de Proveedores</h2>

        </div>

        <div class="col-6 text-end">
            <a asp-controller="Proveedores" asp-action="Crear" class="btn btn-primary">
                <i class="fa-regular fa-plus"></i> Nuevo Proveedor
            </a>
        </div>
    </div>

    <form asp-controller="Proveedores" asp-action="Index">
     <br />
      <p>
      Buscar: <input type="text" name="buscar" class="form-text" />
      <input type="submit" value="Buscar" class="btn btn-sm btn-dark" />
      </p>

    </form>

    <br />

    @if (Model.Count() > 0)
    {

        <table class="table table-striped border-1" style="width:100%">

            <thead class="bg-primary text-white">

                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Cedula
                    </th>
                    <th>
                        Descripcion del proveedor
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>

            <thbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th width="30%">@item.Id</th>
                        <th width="30%">@item.Cedula</th>
                        <th width="50%">@item.Descripcion</th>
                        <th class="text-center">

                            <div class="w-75 btn-group" role="group">

                                <a asp-controller="Proveedores" asp-action="Editar" asp-route-Id="@item.Id" class="btn btn-primary mx-2" width="10%">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Proveedores" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger mx-2" width="10%">
                                    <i class="fas fa-trash-alt"></i>
                                </a>

                            </div>

                        </th>
                    </tr>
                }
            </thbody>

        </table>
    }
    else
    {
        <p>No hay Registro de Productos</p>
    }

</div>
