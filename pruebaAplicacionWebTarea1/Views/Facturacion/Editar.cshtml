@model Clases_CRUD.CRUD_Modelos.EditarFactura

@{
    
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-group row">
    <h2 class="text-info pl-3">Edicion de items de la factura</h2>
</div>

<div class="row mt-5 ">

    <div class="col-md-4 text-dark">

        <form asp-action="Editar">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
            <br />
                <div class="form-group">
                    <label asp-for="idItemFactura" class="control-label"></label>
                    <input asp-for="idItemFactura" class="form-control" />
                    <span asp-validation-for="idItemFactura" class="text-danger"></span>
                </div>
            <br />
                @{

                    List<SelectListItem> item = new()
                {
                new SelectListItem { Text = "Tour" },
                new SelectListItem { Text = "Producto" },
             
                };
                    ViewBag.item = item;
                }

                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <option disabled selected>Que Tipo de item desea editar </option>
                            <select name="respuesta" class="form-control" asp-items="@ViewBag.item"></select>
                        </div>
                    </div>
                </div>
                <br />


            <div class="form-group">
                <input type="submit" value="Eliminar Item" class="btn btn-primary" />
                <a asp-controller="Facturacion" asp-action="Index" class="btn btn-success">Regresar</a>
            </div>

        </form>
    </div>
</div>
